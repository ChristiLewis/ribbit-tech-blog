{{! HANDLEBARS TEMPLATIZED HTML CODE}}
<ol class="post-list">
    {{!ADD HANDLEBAR TO CONNECT CONTROLLERS/HOME-ROUTES.JS }}
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
                <span>({{post.post_url}})</span>
            </div>
            <div class="meta">
                {{post.rate_count}} point(s) by {{post.user.username}} on {{post.created_at}}
                |
                <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{!CLOSING HANDLEBAR CONNECTION TO HOME-ROUTES}}
    {{/each}}
</ol>